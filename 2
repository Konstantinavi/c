#include <iostream>
using namespace std;
int main()
{
    int h, m, s;
    cout << "Введите текущее время (часы, минуты, секунды): ";
    cin >> h >> m >> s;
    int p, q, r;
    cout << "Введите время для добавления (часы, минуты, секунды): ";
    cin >> p >> q >> r;
    s += r;
    if (s >= 60)
        m += s / 60;
    s %= 60;
    m += q;
    if (m >= 60)
        h += m / 60;
    m %= 60;
    h += p;
    if (h >= 24)
        h %= 24;
    cout << "Новое время: " << h << " часов " << m << " минут " << s << " секунд" << endl;

    return 0;
}
        
