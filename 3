#include<iostream>
#include <cmath>
using namespace std;
int main()
{
    setlocale(0, "");
    double x1, x2, x3, y1, y2, y3;
    cout << "Введите координаты A (x1, y1):" << endl;
    cin >> x1 >> y1;
    cout << "Введите координаты B (x2, y2):" << endl;
    cin >> x2 >> y2;
    cout << "Введите координаты C (x3, y3):" << endl;
    cin >> x3 >> y3;
    double ab = sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2)); 
    double bc = sqrt(pow(x3 - x2, 2) + pow(y3 - y2, 2)); 
    double ca = sqrt(pow(x3 - x1, 2) + pow(y3 - y1, 2)); 
    double p = (ab + bc + ca) / 2; 
    double s = sqrt(p * (p - ab) * (p - bc) * (p - ca)); 
    if (s == 0)
        cout << "Не существует";
    else  
    cout << "Площадь треугольника = " << s << endl; 
    return 0;
}
