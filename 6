#include <iostream>
using namespace std;
double x, y;
int main()
{
    setlocale(0, "");
    cout << "Введите (x,y): "; cin >> x; cin >> y;

    if (((y == 0) || (y == 2)) && (x > -2) && (x < 2))
    {
        cout << "Точка на границе";
    }
    else if ((y == 1) && (x >= -1) && (x <= 1))
    {
        cout << "Точка на границе";
    }
    else if (((x == -2) || (x == 2)) && (y >= 0) && (y <= 2))
    {
        cout << "Точка на границе";
    }
    else if (((x == -1) || (x == 1)) && (y >= 0) && (y <= 1))
    {
        cout << "Точка на границе";
    }
    else if (((y + x == -1) && (x <= 0) && (y <= 0)) || ((y - x == -1) && (x >= 0) && (y <= 0)))
    {
        cout << "Точка на границе";
    }
    else if ((((x > -2) && (x < -1)) || ((x > 1) && (x < 2))) && (y > 0) && (y < 2))
    {
        cout << "Входит";
    }
    else if ((x >= -1) && (x <= 1) && (y > 1) && (y < 2))
    {
        cout << "Входит";
    }
    else if (((x <= 0) && (y <= 0) && (y + x > -1)) || (x >= 0) && (y <= 0) && (y - 1 < 1))
    {
        cout << "Входит";
    }
    else
    {
        cout << "Не входит ";
    }

    return 0;
}
